<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".earn.LookEarnActivity"
    tools:showIn="@layout/activity_look_earn">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="204dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">


            <Button
                android:id="@+id/btnAdmobInterstial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_semi_rounded_with_purple_stroke"
                android:text="Admob Interstial "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="204dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">


            <Button
                android:id="@+id/btnAppLovinInterstial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_semi_rounded_with_purple_stroke"
                android:text="AppLovin Interstial "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="204dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">


            <Button
                android:id="@+id/btnFacebookInterstial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_semi_rounded_with_purple_stroke"
                android:text="Facebook Interstial "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>